{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "rootDir": ".",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@vahan/*": ["src/*"]
    },
    "allowJs": true,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src", "environment.d.ts"],
  "exclude": ["node_modules", "dist", "coverage"],
  "ts-node": {
    "files": true
  }
}
